{
  "name": "@morphatic/charts",
  "description": "A charting library for Angular 5+ that uses d3 and d3kit.",
  "version": "0.1.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/morphatic/charts.git"
  },
  "homepage": "https://github.com/morphatic/charts",
  "bugs": "https://github.com/morphatic/charts/issues",
  "author": "Morgan Benton <morgan.benton@gmail.com> (https://morphatic.com)",
  "license": "MIT",
  "peerDependencies": {
    "d3": "^4.12.0",
    "d3kit": "^3.2.0"
  },
  "keywords": [ "chart", "barchart", "d3", "d3kit", "angular", "components" ],
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@angular/common": "^5.1.0",
    "@angular/compiler": "^5.1.0",
    "@angular/core": "^5.1.0",
    "@angular/platform-browser": "^5.1.0",
    "@angular/platform-browser-dynamic": "^5.1.0",
    "@types/d3": "^4.12.0",
    "@types/d3kit": "^3.2.1",
    "@types/jest": "^21.1.8",
    "codelyzer": "^4.0.1",
    "d3": "^4.12.0",
    "d3kit": "^3.2.0",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.1",
    "rxjs": "^5.5.5",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "zone.js": "^0.8.18"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jest.conf.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "./coverage"
  }
}